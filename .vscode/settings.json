{
	"Lua.diagnostics.globals": [
		"printError",
		"sleep",
		"read",
		"write",
		"print",
		"colours",
		"colors",
		"commands",
		"disk",
		"fs",
		"gps",
		"help",
		"http",
		"paintutils",
		"parallel",
		"peripheral",
		"rednet",
		"redstone",
		"keys",
		"settings",
		"shell",
		"multishell",
		"term",
		"textutils",
		"turtle",
		"pocket",
		"vector",
		"bit32",
		"window",
		"_CC_DEFAULT_SETTINGS",
		"_HOST",
		"_VERSION",
		"_"
	],
	"workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
	"editor.semanticHighlighting.enabled": true,
	"[json]": {
		"editor.quickSuggestions": {
			"strings": true
		},
		"editor.suggest.insertMode": "replace"
	},
	"Lua.runtime.version": "LuaJIT",
	
	"workbench.iconTheme": "material-icon-theme",
	"material-icon-theme.folders.theme": "specific",
	"editor.glyphMargin": true,
	"editor.folding": true,
	//"editor.lineNumbers": "off",
	"workbench.activityBar.visible": true,
	"editor.lineDecorationsWidth": 0, // undocumented
	//"editor.lineNumbersMinChars": 5,  // undocumented
	"editor.columnSelection": false,
	"Lua.color.mode": "Semantic",
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true
	},
	"pixelbyte.love2d.runOnSave": false,
	"Lua.hint.setType": true,
	"Lua.workspace.checkThirdParty": false,
	"Lua.semantic.annotation": true,
	"Lua.semantic.keyword": true,
	"Lua.semantic.variable": true,
	"vscode-lua-format.configPath": ".vscode/lua-format.txt",
	"Lua.diagnostics.disable": [
		"lowercase-global",
		"need-check-nil"
	]
}